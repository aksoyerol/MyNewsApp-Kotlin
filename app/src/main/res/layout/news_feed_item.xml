<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">


        <TextView
            android:id="@+id/txtSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="5dp"
            android:text="Source"
            android:textColor="#6A1C1919"
            app:layout_constraintBottom_toTopOf="@+id/title"
            app:layout_constraintStart_toEndOf="@+id/sourceIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/sourceIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"

            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/txtSource"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtSource"
            app:srcCompat="@drawable/ic_content" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_marginStart="8dp"
            android:padding="5dp"
            android:text="What's on TV: 'FIFA 21,' 'The Haunting of Bly Manor' and 'The Boys' finale"
            android:textColor="#3C3939"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/txtAuthor"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.102"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.59" />

        <TextView
            android:id="@+id/txtAuthor"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:text="Erol Aksoy"
            android:textColor="#6A000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:maxHeight="190dp"
            android:scaleType="centerCrop"

            android:src="@drawable/ic_launcher_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

<!--        <View-->
<!--            android:layout_width="fill_parent"-->
<!--            android:layout_height="1dp"-->
<!--            android:layout_margin="10dp"-->
<!--            android:background="@color/black"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            tools:layout_editor_absoluteX="0dp" />-->
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
